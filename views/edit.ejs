<% include partials\header.ejs%>
<div class="ui container">
    <form class="ui form" action="/movies/<%= review._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Review Title</label>
            <input type="text" name="review[reviewTitle]" value="<%= review.reviewTitle %>">                    
        </div>
        <div class="field">
            <label> Movie Title</label>
            <input type="text" name="review[title]" value="<%= review.title %>">
        </div>
        <div class="field">
            <label >Poster url</label>
            <input type="text" name="review[poster_url]"  value="<%= review.poster_url %>">
        </div>
        <div class="field">
            <label>Genre</label>
            <input type="text" name="review[genre]" placeholder="action,adventure,fantasy" value="<%= review.genre %>">
        </div>
        <div class="field">
            <label >Plot</label>
            <textarea name="review[plot]" > <%= review.plot %> </textarea>
        </div>
        <div class="field">
            <label>Rating</label>
            <input type="number" name="review[Rating]" min="1" step=".5" max="10" maxlength="2" value="<%= review.Rating %>">
        </div>
        <div class="field">
            <label>Runtime</label>
            <input type="number" name="review[runtime]" min="40" max="210" maxlength="3" value="<%= review.runtime %>">
        </div>
        <div class="field">
            <label>Review</label>
            <textarea name="review[Review]"><%= review.Review %></textarea>            
        </div>
        <button type="submit" class="ui basic blue button">UPDATE</button>
    </form>
</div>
<% include partials\footer.ejs%>